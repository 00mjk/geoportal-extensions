{
    "tags": {
        "allowUnknownTags": true
    },
    "plugins": ["plugins/markdown"],
    "source": {
        "include": [
            "src/Leaflet",
            "src/Common",
            "doc/README-leaflet.md"
        ]
    },
    "templates": {
        "applicationName" : "Geoportal Extension for Leaflet"
    },
    "markdown": {
        "parser": "gfm",
        "hardwrap": true
    },
    "opts": {
        "template" : "target/build/Leaflet/doc/jaguarjs-jsdoc",
        "encoding" : "utf8",
        "destination": "./target/build/Leaflet/doc",
        "recurse": true,
        "lenient": true,
        "verbose": true,
        "tutorials" : "./target/build/Leaflet/doc/tutorials"
    }
}
