{
    "tags": {
        "allowUnknownTags": true
    },
    "plugins": ["plugins/markdown"],
    "source": {
        "include": [
            "./src/Leaflet",
            "./src/Common",
            "./doc/README-leaflet.md"
        ]
    },
    "templates": {
        "applicationName" : "Geoportal Extension for Leaflet"
    },
    "markdown": {
        "parser": "gfm",
        "hardwrap": true
    },
    "opts": {
        "template" : "./doc/jaguarjs-jsdoc",
        "encoding" : "utf8",
        "destination": "./jsdoc/leaflet",
        "recurse": true,
        "lenient": true,
        "verbose": true,
        "tutorials" : "./doc/tutorials"
    }
}
